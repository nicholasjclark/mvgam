{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "WebFetch(domain:cran.r-project.org)",
      "Bash(Rscript:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(mv:*)",
      "Bash(ls:*)",
      "Bash(tree:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "enabled": true,
    "directory": ".claude/hooks",
    "before_write": [
      {
        "name": "duplicate-function-detector-hook",
        "script": ".claude/hooks/duplicate-function-detector-hook.ps1",
        "enabled": true,
        "file_patterns": [
          "*.R",
          "*.r"
        ],
        "exclude_patterns": [
          "tests/testthat/test-*.R",
          "inst/examples/*.R"
        ],
        "operations": [
          "create",
          "modify",
          "update"
        ],
        "timeout": 30,
        "retry_count": 1
      },
      {
        "name": "r-code-review-hook",
        "script": ".claude/hooks/r-code-review-hook.ps1",
        "enabled": true,
        "file_patterns": [
          "*.R",
          "*.r", 
          "*.Rmd",
          "*.rmd",
          "*.Rnw",
          "*.rnw"
        ],
        "exclude_patterns": [
          "tests/testthat/test-*.R",
          "inst/examples/*.R"
        ],
        "operations": [
          "create",
          "modify",
          "update"
        ],
        "timeout": 60,
        "retry_count": 1
      }
    ],
    "post_git_commit": [
      {
        "name": "package-dependency-mapper-hook",
        "script": ".claude/hooks/package-dependency-mapper-hook.ps1",
        "enabled": true,
        "timeout": 120,
        "retry_count": 1
      }
    ]
  },
  "sub_agents": {
    "code-reviewer": {
      "enabled": true,
      "timeout": 45,
      "max_retries": 2
    }
  },
  "file_operations": {
    "backup_before_write": false,
    "confirm_destructive_operations": true
  },
  "logging": {
    "level": "info",
    "log_hooks": true,
    "log_sub_agents": true
  }
}
