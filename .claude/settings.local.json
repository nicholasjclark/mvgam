{
  "permissions": {
    "allow": [
      "Bash(git log:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits",
    "ask": []
  },
  "hooks": {
    "enabled": true,
    "directory": ".claude/hooks",
    "PreToolUse": [
      {
        "matcher": "Write.*\\.R$|Edit.*\\.R$",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/duplicate-function-detector-hook.ps1 -Event before_write -FilePath \"$CLAUDE_TOOL_FILE_PATH\" -Operation \"$CLAUDE_TOOL_OPERATION\""
          }
        ]
      },
      {
        "matcher": "Write.*\\.(R|Rmd|Rnw)$|Edit.*\\.(R|Rmd|Rnw)$",
        "hooks": [
          {
            "type": "command", 
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/r-code-review-hook.ps1 -Event before_write -FilePath \"$CLAUDE_TOOL_FILE_PATH\" -Operation \"$CLAUDE_TOOL_OPERATION\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash.*git commit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/package-dependency-mapper-hook.ps1 -Event post_git_commit -CommitHash $(git rev-parse HEAD) -CommitMessage \"$(git log -1 --pretty=%B)\""
          }
        ]
      }
    ]
  },
  "sub_agents": {
    "code-reviewer": {
      "enabled": true,
      "timeout": 45,
      "max_retries": 2
    }
  },
  "file_operations": {
    "backup_before_write": false,
    "confirm_destructive_operations": true
  },
  "logging": {
    "level": "info",
    "log_hooks": true,
    "log_sub_agents": true
  }
}