{
  "permissions": {
    "allow": [
      "WebFetch(domain:www.reddit.com)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits",
    "ask": []
  },
  "hooks": {
    "enabled": true,
    "directory": ".claude/hooks",
    "PostToolUse": [
      {
        "matcher": "Bash.*review-r-code",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/r-code-review-hook-fixed.ps1"
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/duplicate-function-detector-hook-fixed.ps1"
          }
        ]
      },
      {
        "matcher": "Bash.*git commit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/package-dependency-mapper-hook.ps1 -Event post_git_commit -CommitHash $(git rev-parse HEAD) -CommitMessage \"$(git log -1 --pretty=%B)\""
          }
        ]
      }
    ]
  },
  "sub_agents": {
    "code-reviewer": {
      "enabled": true,
      "timeout": 45,
      "max_retries": 2
    }
  },
  "file_operations": {
    "backup_before_write": false,
    "confirm_destructive_operations": true
  },
  "logging": {
    "level": "info",
    "log_hooks": true,
    "log_sub_agents": true
  }
}