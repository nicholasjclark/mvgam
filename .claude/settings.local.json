{
  "permissions": {
    "allow": [
      "Bash(git log:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits",
    "ask": []
  },
  "hooks": {
    "enabled": true,
    "directory": ".claude/hooks",
    "before_write": [
      {
        "name": "duplicate-function-detector-hook",
        "script": ".claude/hooks/duplicate-function-detector-hook.ps1",
        "enabled": true,
        "file_patterns": [
          "*.R",
          "*.r"
        ],
        "exclude_patterns": [
          "tests/testthat/test-*.R",
          "inst/examples/*.R"
        ],
        "operations": [
          "create",
          "modify",
          "update"
        ],
        "timeout": 30,
        "retry_count": 1
      },
      {
        "name": "r-code-review-hook",
        "script": ".claude/hooks/r-code-review-hook.ps1",
        "enabled": true,
        "file_patterns": [
          "*.R",
          "*.r",
          "*.Rmd",
          "*.rmd",
          "*.Rnw",
          "*.rnw"
        ],
        "exclude_patterns": [
          "tests/testthat/test-*.R",
          "inst/examples/*.R"
        ],
        "operations": [
          "create",
          "modify",
          "update"
        ],
        "timeout": 60,
        "retry_count": 1
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash.*git commit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/package-dependency-mapper-hook.ps1 -Event post_git_commit -CommitHash $(git rev-parse HEAD) -CommitMessage \"$(git log -1 --pretty=%B)\""
          }
        ]
      }
    ]
  },
  "sub_agents": {
    "code-reviewer": {
      "enabled": true,
      "timeout": 45,
      "max_retries": 2
    }
  },
  "file_operations": {
    "backup_before_write": false,
    "confirm_destructive_operations": true
  },
  "logging": {
    "level": "info",
    "log_hooks": true,
    "log_sub_agents": true
  }
}